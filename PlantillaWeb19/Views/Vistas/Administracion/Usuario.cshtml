
@{
    ViewBag.Title = "Usuario";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@section scripts{
    @Scripts.Render("~/js/usuarios")
}


<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Usuarios</h1>
</div>
<br />
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-10 col-lg-10 col-xl-10">
        <input type="button" id="btnNuevo" name="btnNuevo" class="btn btn-primary" value="Nuevo">
    </div>
</div>
<br />
<div class="row">
    <div id="gridUsuarios" class="col-lg-12 mb-4">
    </div>
</div>
<hr />


<!--JqxWindow-->
<div id="wdwUsuarios">
    <div>
        <span>
            <label id="wdwTitulo"></label>
        </span>
    </div>
    <div style="overflow: hidden;">
        <form id="frmUsuarios" name="frmUsuarios">
            <input type="hidden" id="hidId" name="hidId" />

            <div class="form-group">
                <label for="btnBuscarUsuarios">Nombre</label>
                <div id="btnBuscarUsuarios">
                    <div style="border-color: transparent;" id="gridBuscarUsuarios">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="chkActivo">Activo</label>
                <div id="chkActivo"></div>
            </div>

            <div class="form-group">
                <label for="gridPerfiles">Perfiles</label>
                <div id="gridPerfiles"></div>
            </div>

            <div style="text-align: right;">
                <input type="button" id="btnCerrar" name="btnCerrar" class="btn btn-secondary" value="Cerrar">
                <input type="button" id="btnAccion" name="btnAccion" class="btn btn-primary" value="">
            </div>
        </form>
    </div>

</div>