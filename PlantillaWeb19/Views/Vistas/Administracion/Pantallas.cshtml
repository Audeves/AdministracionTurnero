
@{
    ViewBag.Title = "Pantallas";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@section scripts{
    @Scripts.Render("~/js/pantallas")
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Pantallas y acciones</h1>
</div>
<br />
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-10 col-lg-10 col-xl-10">
        <input type="button" id="btnNuevo" name="btnNuevo" class="btn btn-primary" value="Nuevo">
    </div>
</div>
<br />
<div class="row">
    <div id="gridPantallas" class="col-lg-12 mb-4">
    </div>
</div>

<div id="modalPantallas" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tituloModal"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmPantallas" name="frmPantallas">
                    <input type="hidden" id="hidId" name="hidId" />
                    <div class="form-group">
                        <label for="txtNombre">Nombre</label>
                        <input type="text" id="txtNombre" name="txtNombre" class="form-control" maxlength="50">
                    </div>
                    <div class="form-group">
                        <label for="txtControlador">Controlador</label>
                        <input type="text" id="txtControlador" name="txtControlador" class="form-control" value="Vistas" maxlength="50">
                    </div>
                    <div class="form-group">
                        <label for="txtAccion">Acción</label>
                        <input type="text" id="txtAccion" name="txtAccion" class="form-control" maxlength="50">
                    </div>
                    <div class="form-group">
                        <label for="txtClaseIcono">Icono</label>
                        <input type="text" id="txtClaseIcono" name="txtClaseIcono" class="form-control" maxlength="50">
                    </div>
                    <div class="form-group">
                        <label for="cboModulo">Módulo</label>
                        <div id="cboModulo"></div>
                    </div>
                    <div class="form-group">
                        <label for="cboSubmodulo">Submódulo</label>
                        <div id="cboSubmodulo"></div>
                    </div>
                    <div class="form-group">
                        <label for="chkActivo">Activo</label>
                        <div id="chkActivo"></div>
                    </div>
                    <div class="form-group">
                        <label for="chkPrivado">Privado</label>
                        <div id="chkPrivado"></div>
                    </div>
                    <div class="form-group">
                        <label for="gridAcciones">Acciones</label>
                        <div id="gridAcciones"></div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <input type="button" id="btnCerrar" name="btnCerrar" class="btn btn-secondary" value="Cerrar" data-dismiss="modal">
                <input type="button" id="btnAccion" name="btnAccion" class="btn btn-primary" value="">
            </div>
        </div>
    </div>
</div>