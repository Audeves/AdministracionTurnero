
@{
    ViewBag.Title = "AreasAtencion";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@section scripts{
    @Scripts.Render("~/js/areasAtencion")
}


<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Áreas de atención</h1>
</div>
<br />
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-10 col-lg-10 col-xl-10">
        <input type="button" id="btnNuevo" name="btnNuevo" class="btn btn-primary" value="Nuevo">
    </div>
</div>
<br />
<div class="row">
    <div id="gridAreasAtencion" class="col-lg-12 mb-4">
    </div>
</div>
<hr />

<!-- Modal -->
<div id="modalAreasAtencion" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tituloModal"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmAreasAtencion" name="frmAreasAtencion">
                    <input type="hidden" id="hidId" name="hidId" />
                    <div class="form-group">
                        <label for="txtNombre">Nombre</label>
                        <input type="text" id="txtNombre" name="txtNombre" class="form-control" maxlength="50">
                    </div>
                    <div class="form-group">
                        <label for="cboCampus">Campus</label>
                        <div id="cboCampus"></div>
                    </div>
                    <div class="form-group">
                        <label for="chkActivo">Activo</label>
                        <div id="chkActivo"></div>
                    </div>
                    <div class="form-group">
                        <label for="gridResponsables">Responsables</label>
                        <div id="gridResponsables"></div>
                    </div>

                    <div class="form-group">
                        <label for="chkDisponibleCitas">Disponible para solicitar citas</label>
                        <div id="chkDisponibleCitas"></div>
                    </div>
                    <div class="form-group">
                        <label for="txtResponsablePermisoCitas">Nombre de responsable para servicios generales</label>
                        <input type="text" id="txtResponsablePermisoCitas" name="txtResponsablePermisoCitas" class="form-control" maxlength="300">
                    </div>
                    <div class="form-group">
                        <label for="txtLugarCitas">Lugar donde se atenderán las citas</label>
                        <input type="text" id="txtLugarCitas" name="txtLugarCitas" class="form-control" maxlength="300">
                    </div>
                    <div class="form-group">
                        <label for="txtCorreoAgendada">Nombre de formato de correo de cita agendada</label>
                        <input type="text" id="txtCorreoAgendada" name="txtCorreoAgendada" class="form-control" maxlength="300">
                    </div>
                    <div class="form-group">
                        <label for="txtCorreoCancelada">Nombre de formato de correo de cita cancelada</label>
                        <input type="text" id="txtCorreoCancelada" name="txtCorreoCancelada" class="form-control" maxlength="300">
                    </div>
                    <div class="form-group">
                        <label for="txtCorreoRemitenteCitas">Correo remitente para citas</label>
                        <input type="text" id="txtCorreoRemitenteCitas" name="txtCorreoRemitenteCitas" class="form-control" maxlength="300">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <input type="button" id="btnCerrar" name="btnCerrar" class="btn btn-secondary" value="Cerrar" data-dismiss="modal">
                <input type="button" id="btnAccion" name="btnAccion" class="btn btn-primary" value="">
            </div>
        </div>
    </div>
</div>


